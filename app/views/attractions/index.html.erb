<h1>Listing attractions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Picture</strong></td>
      <td><strong>Name</strong></td>
      <td><strong>Tickets</strong></td>
      <td><strong>Details</strong></td>
    </tr>
    <% @attractions.each do |attraction| %>
      <tr>
        <td><img src="http://<%= attraction.name.gsub(" ", "") %>.jpg.to/" width="100"></td>
        <td><%= attraction.name %></td>
        <td><%= attraction.tickets %></td>
        <% if @customer %>
          <td><%= link_to 'Show', customer_attraction_path(@customer, attraction) %></td>
        <% else %>
          <td><%= link_to 'Show', attraction_path(attraction) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if @customer %>
  <p>
    <%= link_to "Back to profile", customer_path(@customer), {:class => "btn btn-primary"} %>
  </p>
<% else %>
  <p><%= link_to 'New Attraction', new_attraction_path %></p>
<% end %>
